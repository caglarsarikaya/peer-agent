# Peer Agent Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# Search API Configuration (OPTIONAL - for ContentAgent web search)
# Get your free API key from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here
SEARCH_ENGINE=serpapi

# MongoDB Configuration (OPTIONAL - defaults to local MongoDB)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=peer_agent_db
MONGODB_COLLECTION=interactions

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Agent Configuration
MAX_SEARCH_RESULTS=5
CONTENT_AGENT_ENABLED=True
CODE_AGENT_ENABLED=True 